public abstract class CasinoGame{
    /****************
     *instance vars*
     ****************/
    protected double balance; //calculates the user's balance
    
    /*********
     *methods
     *********/
    public boolean isBroke(){
	return balance <= 0;
    }

    public double getBalance(){
	return balance;
    }

    public abstract void play();

    public void makeADeck(){
	Card[] deck = new Card[52];
	for(int i = 0; i < 52; i++){
	    deck[i] = new Card(i);
	}
    }
	    
    public void shuffle(){
	
    }
}
